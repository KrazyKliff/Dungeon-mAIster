{
  "name": "rule-engine",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "rule-engine/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project rule-engine --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/rule-engine",
        "main": "rule-engine/src/index.ts",
        "tsConfig": "rule-engine/tsconfig.lib.json",
        "assets": ["rule-engine/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/rule-engine"],
      "inputs": [
        "default",
        "sharedGlobals",
        "{workspaceRoot}/jest.preset.js"
      ],
      "options": {
        "jestConfig": "rule-engine/jest.config.ts"
      }
    }
  }
}
